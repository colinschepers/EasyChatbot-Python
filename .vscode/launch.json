{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Init",
            "type": "python",
            "request": "launch",
            "program": "init.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "FLASK_CONFIG": "development"
            },
            "args": [
                "run",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Tests",
            "type": "python",
            "request": "launch",
            "program": "tests.py",
            "console": "integratedTerminal"
        }
    ]
}